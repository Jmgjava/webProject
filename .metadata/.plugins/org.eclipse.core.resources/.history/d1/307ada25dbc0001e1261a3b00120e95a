package org.java.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import org.java.connect.DBConnect;

public class MemberDao {

	public MemberDao() {
		System.out.println("싱글톤");
	}

	private static class singleton {
		private static final MemberDao INSTACE = new MemberDao();
	}

	public static MemberDao getInstance() {
		return singleton.INSTACE;
	}

	public int mInsert() {
		int result = 0;

		Connection conn = null;
		PreparedStatement pstm = null;
		String query = "";

		try {
			conn = DBConnect.getConnetion();
			query = "insert into board0201(no,userId,userPw,age,name) VALUES(?,?,?,?,?)";
			pstm = conn.prepareStatement(query);

			pstm.setInt(1, no);
			pstm.setString(2, userId);
			pstm.setString(3, userPw);
			pstm.setInt(4, age);
			pstm.setString(5, name);

			pstm.executeUpdate();
		} catch (SQLException e) {
			e.printStackTrace();
		}

		return result;
	}

}
